<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="none">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/layoutTop"
            android:layout_width="match_parent"
            android:layout_height="150dp">

            <FrameLayout
                android:id="@+id/profile_image_frame"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_gravity="center">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/app_name"
                    android:scaleType="fitXY"
                    android:src="@drawable/profile_header" />

                <TextView
                    fontPath="fonts/Poppins-Medium.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/padding_15dp"
                    android:gravity="center"
                    android:text="@string/payment"
                    android:textColor="#ffffff"
                    android:textSize="20sp"
                    tools:ignore="MissingPrefix" />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="start"
                    android:contentDescription="@string/app_name"
                    android:onClick="BackClick"
                    android:padding="14dp"
                    android:src="@drawable/back" />
            </FrameLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layoutBottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/layoutTop"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/padding_20dp">

            <TextView
                android:id="@+id/txtName"
                fontPath="fonts/Poppins-Medium.ttf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/padding_20dp"
                android:gravity="center"
                android:text="@string/john"
                android:textColor="#1CA8DE"
                android:textSize="20sp"
                tools:ignore="MissingPrefix" />

            <LinearLayout
                android:id="@+id/layoutTip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtName"
                android:layout_marginTop="@dimen/padding_20dp"
                android:background="#DCDCDC"
                android:weightSum="4">

                <TextView
                    android:id="@+id/txt1"
                    fontPath="fonts/Poppins-Medium.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/padding_5dp"
                    android:layout_weight="1"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:text="@string/no_tip"
                    android:textColor="#1CA8DE"
                    android:textSize="20sp"
                    tools:ignore="MissingPrefix" />

                <TextView
                    android:id="@+id/txt2"
                    fontPath="fonts/Poppins-Medium.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/padding_5dp"
                    android:layout_weight="1"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:text="@string/txt2"
                    android:textColor="#1CA8DE"
                    android:textSize="20sp"
                    tools:ignore="MissingPrefix" />

                <TextView
                    android:id="@+id/txt3"
                    fontPath="fonts/Poppins-Medium.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/padding_5dp"
                    android:layout_weight="1"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:text="@string/txt3"
                    android:textColor="#1CA8DE"
                    android:textSize="20sp"
                    tools:ignore="MissingPrefix" />

                <TextView
                    android:id="@+id/txt4"
                    fontPath="fonts/Poppins-Medium.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/padding_5dp"
                    android:layout_weight="1"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:text="@string/txt4"
                    android:textColor="#1CA8DE"
                    android:textSize="20sp"
                    tools:ignore="MissingPrefix" />

                <TextView
                    android:id="@+id/txt5"
                    fontPath="fonts/Poppins-Medium.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/padding_5dp"
                    android:layout_weight="1"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:text="@string/other"
                    android:textColor="#1CA8DE"
                    android:textSize="20sp"
                    android:visibility="gone"
                    tools:ignore="MissingPrefix" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/layoutTip"
                android:layout_marginTop="@dimen/padding_10dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/padding_20dp"
                    android:layout_marginLeft="@dimen/padding_20dp"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/visa" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/padding_10dp"
                    android:layout_marginLeft="@dimen/padding_10dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Paypal"
                        android:textColor="#272928"
                        android:textSize="12sp" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center"
                    android:layout_marginEnd="@dimen/padding_20dp"
                    android:layout_marginRight="@dimen/padding_20dp"
                    android:text=""
                    android:textColor="@color/blueColor" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutAmt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/layoutCard"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtAmt"
                    fontPath="fonts/Poppins-Medium.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:drawableStart="@drawable/coins"
                    android:drawableLeft="@drawable/coins"
                    android:drawablePadding="@dimen/margin_top_10dp"
                    android:gravity="center"
                    android:text="0.00"
                    android:textColor="#363F45"
                    android:textSize="25sp"
                    tools:ignore="MissingPrefix" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutRoundAmt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/layoutAmt"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btnRoundAmount"
                    android:layout_width="140dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:background="@drawable/round_amount_btn"
                    android:text="Round Amount"
                    android:textAllCaps="false"
                    android:textColor="#fff"
                    android:textSize="14sp"
                    tools:ignore="MissingPrefix" />

                <TextView
                    android:id="@+id/txtShowAmt"
                    fontPath="fonts/Poppins-Medium.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:gravity="center"
                    android:text="0.00"
                    android:textColor="#363F45"
                    android:textSize="18sp"
                    android:visibility="visible"
                    tools:ignore="MissingPrefix" />

                <TextView
                    android:id="@+id/txtHintRound"
                    fontPath="fonts/Poppins-Medium.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="20dp"
                    android:gravity="center"
                    android:text="This extra amount allows us to donated to charities and good causes."
                    android:textColor="#363F45"
                    android:textSize="14sp"
                    android:visibility="gone"
                    tools:ignore="MissingPrefix" />
            </LinearLayout>

            <Button
                android:id="@+id/imgDone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/layoutRoundAmt"
                android:layout_gravity="center"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="40dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/intro_background"
                android:onClick="RateClick"
                android:text="Pay with PayPal"
                android:textAllCaps="false"
                android:textColor="@color/galleryItemOverlay" />


            <Button
                android:id="@+id/btnStripe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/imgDone"
                android:layout_gravity="center"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="@dimen/padding_20dp"
                android:layout_marginRight="40dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/intro_background"
                android:onClick="PayByStripe"
                android:text="Pay with Stripe"
                android:textAllCaps="false"
                android:textColor="@color/galleryItemOverlay" />
        </RelativeLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/overlapImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_above="@id/layoutBottom"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="-20dp"
            android:src="@drawable/user_placeholder" />
    </RelativeLayout>
</ScrollView>

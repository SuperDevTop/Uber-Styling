<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/past_ride"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/padding_5dp"
        android:layout_marginLeft="@dimen/padding_10dp"
        android:layout_marginRight="@dimen/padding_10dp"
        android:layout_marginTop="@dimen/padding_5dp"
        android:background="@drawable/edit_text_background"
        android:elevation="@dimen/padding_5dp"
        android:orientation="vertical"
        android:padding="@dimen/padding_10dp"
        tools:targetApi="lollipop">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/padding_10dp"
            android:paddingRight="@dimen/padding_10dp"
            android:paddingTop="@dimen/padding_10dp">

            <TextView
                android:id="@+id/booking_date"
                fontPath="fonts/Poppins-Regular.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/galleryItemOverlay"
                tools:ignore="MissingPrefix"
                android:textStyle="bold"
                android:textSize="15dp"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/padding_10dp"
            android:paddingRight="@dimen/padding_10dp">

            <TextView
                android:id="@+id/booking_car_type"
                fontPath="fonts/Poppins-Regular.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/grey"
                tools:ignore="MissingPrefix" />

            <TextView
                android:id="@+id/booking_amount"
                fontPath="fonts/Poppins-Regular.ttf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:gravity="end"
                android:text=""
                android:textColor="@color/grey"
                tools:ignore="MissingPrefix" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_10dp"
                android:layout_marginRight="@dimen/padding_10dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:id="@+id/past_pickup_add"
                    fontPath="fonts/Poppins-Regular.ttf"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/location_green"
                    android:drawablePadding="@dimen/padding_10dp"
                    android:drawableStart="@drawable/location_green"
                    android:singleLine="true"
                    android:text=""
                    android:textStyle="bold"
                    android:textColor="@color/blueColor"
                    android:textSize="12sp"
                    tools:ignore="MissingPrefix" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_10dp"
                android:layout_marginRight="@dimen/padding_10dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:id="@+id/past_drop_add"
                    fontPath="fonts/Poppins-Regular.ttf"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_10dp"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/location_orange"
                    android:drawablePadding="@dimen/padding_15dp"
                    android:drawableStart="@drawable/location_orange"
                    android:singleLine="true"
                    android:text=""
                    android:textStyle="bold"
                    android:textColor="@color/blueColor"
                    android:textSize="12sp"
                    tools:ignore="MissingPrefix" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>